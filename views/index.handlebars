<div class="container mt-3 form-group">
  <form action="/filter" method="POST">
    <div class="row">
      {{> messages}}
      <div class="col-2">
        <select name="selectedYear" class="form-control">
          <option value="all">全部年份</option>
          {{#each year}}
          <option value="{{this.year}}" {{isSelected ../selectedYear this.year}}>{{this.year}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-3">
        <select name="selectedMonth" class="form-control">
          <option value="all">全部月份</option>
          {{#each month}}
          <option value="{{this.value}}" {{isSelected ../selectedMonth this.value}}>{{this.month_ch}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-3">
        <select name="selectedCategory" class="form-control">
          <option value="all">全部類別</option>
          {{#each category}}
          <option value="{{this.category_name}}" {{isSelected ../selectedCategory this.category_name}}>
            {{this.category_name}}
          </option>
          {{/each}}
        </select>
      </div>
      <div class="col-1">
        <button class="btn btn-primary">篩選</button>
      </div>
    </div>
  </form>
  <div class="row mt-5 mb-5">
    <div class="col">
      <h2>總金額: {{{totalAmount}}}</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col">

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">類別</th>
            <th scope="col">名稱</th>
            <th scope="col">商家</th>
            <th scope="col">金額</th>
            <th scope="col">時間</th>
            <th scope="col" class="th_blank"></th>
            <th scope="col" class="th_blank"><a class="btn btn-outline-primary btn-lg" href="/record/new">新增</a>
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each records}}
          <tr class="table-success" style="line-height: 45px;">
            <th scope="row">
              {{#if_equal category '家居物業'}}<i class="fas fa-home"></i>
              {{/if_equal}}
              {{#if_equal category '餐飲食品'}}<i class="fas fa-utensils"></i>
              {{/if_equal}}
              {{#if_equal category '運輸交通'}}<i class="fas fa-shuttle-van"></i>
              {{/if_equal}}
              {{#if_equal category '休閒娛樂'}}<i class="fas fa-grin-beam"></i>
              {{/if_equal}}
              {{#if_equal category '其他'}}<i class="fas fa-pen"></i>
              {{/if_equal}}
              {{{this.category}}}</th>
            <td>{{{this.name}}}
            <td>{{{this.shop}}}</td>
            </td>
            <td>{{{this.amount}}}</td>
            <td>{{this.date}}</td>
            <td><a href="/record/{{{this._id}}}/edit" class="btn btn-secondary edit">修改</a></td>
            <td>
              <form action="/record/{{{this._id}}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-front">刪除</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col" id="pagination">
      <ul class="pagination">
        <li class="page-item disabled">
          <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item active">
          <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">4</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">5</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">&raquo;</a>
        </li>
      </ul>
    </div>
  </div>
</div>