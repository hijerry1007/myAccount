<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <ul class="nav nav-pills ">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
            aria-expanded="false">依分類搜尋</a>
          <div class="dropdown-menu" style="">
            <a class="dropdown-item" href="#"><i class="fas fa-home"></i> 居家物業</a>
            <a class="dropdown-item" href="#"><i class="fas fa-utensils"></i> 餐飲食品</a>
            <a class="dropdown-item" href="#"><i class="fas fa-shuttle-van"></i> 運輸交通</a>
            <a class="dropdown-item" href="#"><i class="fas fa-grin-beam"></i> 休閒娛樂</a>
            <a class="dropdown-item" href="#"><i class="fas fa-pen"></i> 其他</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class="row mt-5 mb-5">
    <div class="col">
      <h2>總金額: {{{totalAmount}}}</h2>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col">

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">類別</th>
            <th scope="col">名稱</th>
            <th scope="col">金額</th>
            <th scope="col" class="th_blank"></th>
            <th scope="col" class="th_blank"><a class="btn btn-outline-primary btn-lg" href="/record/new">新增</a>
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each records}}
          <tr class="table-success" style="line-height: 45px;">
            <th scope="row">
              {{#if_equal category '家居物業'}}<i class="fas fa-home"></i>
              {{/if_equal}}
              {{#if_equal category '餐飲食品'}}<i class="fas fa-utensils"></i>
              {{/if_equal}}
              {{#if_equal category '運輸交通'}}<i class="fas fa-shuttle-van"></i>
              {{/if_equal}}
              {{#if_equal category '休閒娛樂'}}<i class="fas fa-grin-beam"></i>
              {{/if_equal}}
              {{#if_equal category '其他'}}<i class="fas fa-pen"></i>
              {{/if_equal}}
              {{{this.category}}}</th>
            <td>{{{this.name}}}</td>
            <td>{{this.amount}}</td>
            <td><a href="/record/{{{this._id}}}/edit" class="btn btn-secondary edit">修改</a></td>
            <td>
              <form action="/record/{{{this._id}}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-front">刪除</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col" id="pagination">
      <ul class="pagination">
        <li class="page-item disabled">
          <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item active">
          <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">4</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">5</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">&raquo;</a>
        </li>
      </ul>
    </div>
  </div>
</div>